{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@hooks/*": ["src/hooks/*"],
      "@ui/*": ["src/ui/*"],
      "@services/*": ["src/services/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "exclude": [
    "functions/**",
    "backend/**",
    "**/node_modules/**"
  ],
  "include": [
    "App.tsx",
    "app.json",
    "index.ts",
    "index.tsx",
    "src/**/*"
  ]
}
